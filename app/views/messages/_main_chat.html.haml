.chat-main
  .main-header
    .main-header__leftbox
      .main-header__leftbox__current-group
        = @group.name
      .main-header__leftbox__member-list
        Memberï¼š 
        .main-header__leftbox__member-list__member
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group.id), class: "main-header__edit-btn" do
      Edit
  .messages
    = render @messages
      

  .form
    = form_for [@group, @message], html:{class:"new_message"}, local:true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'

